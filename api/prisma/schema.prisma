datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
  
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}


model User {
  userId        String        @id
  displayName   String
  invalidateFlg Boolean       @default(false)
  createdAt     DateTime      @default(now())

  roomMembers   RoomMember[]
  proofRoomMembers ProofRoomMember[]
}

model Room {
  id           Int           @id @default(autoincrement())
  roomCode     String        @unique
  status       Int           @default(0)
  openFlg      Boolean       @default(true)
  createdAt    DateTime      @default(now())

  members      RoomMember[]
  sessions     RoomSession[]
}

model RoomMember {
  id        Int      @id @default(autoincrement())
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    Int

  user      User     @relation(fields: [userId], references: [userId])
  userId    String

  role      MRole    @relation(fields: [roleId], references: [roleId])
  roleId    Int      @default(0)

  status    Int      @default(0)

  sort      Int      @default(0)    

  joinedAt  DateTime @default(now())
  commands  Command[]
  @@unique([roomId, userId])
}

enum Direction {
  N
  E
  S
  W
}

model RoomSession {
  id         Int        @id @default(autoincrement())
  roomId     Int        @unique
  turn       Int        @default(0)

  posX       Int
  posY       Int
  direction  Direction  // 今向いている方向（N/E/S/W）

  setting    String     @default("")

  status     Int        @default(0)

  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  room            Room       @relation(fields: [roomId], references: [id])
  commands        Command[]
}

enum CommandType {
  FORWARD
  TURN_RIGHT
  TURN_LEFT
  SPECIAL
  SKIP
}

model Command {
  id             Int          @id @default(autoincrement())
  roomSessionId  Int
  memberId       Int

  commandType    CommandType
  processed      Boolean      @default(false)
  arg            String       @default("")
  createdAt      DateTime     @default(now())
  processedAt    DateTime?

  roomSession    RoomSession  @relation(fields: [roomSessionId], references: [id])
  member         RoomMember   @relation(fields: [memberId], references: [id])
  history        CommandHistory?
}

model CommandHistory {
  id             Int          @id @default(autoincrement())
  roomSessionId  Int
  memberId       Int
  commandId      Int          @unique

  turn           Int
  arg            String       @default("")
  createdAt      DateTime     @default(now())

  command        Command      @relation(fields: [commandId], references: [id])

}

model InvalidatedLineUserForm {
  id          String   @id @default(cuid())
  formId      String   @unique
  createdAt   DateTime @default(now())
}

model MRole {
  roleId      Int           @id
  roleName    String
  priority    Int           @default(0)
  description String
  imageUrl    String
  notionUrl   String        @default("")
  group       Int           @default(0)

  members     RoomMember[]
}



model ProofRoom {
  id           Int           @id @default(autoincrement())
  roomCode     String        @unique
  status       Int           @default(0)
  openFlg      Boolean       @default(true)
  createdAt    DateTime      @default(now())

  members      ProofRoomMember[]
  sessions     ProofRoomSession[]
}

model ProofRoomMember {
  id        Int         @id @default(autoincrement())
  room      ProofRoom   @relation(fields: [roomId], references: [id])
  roomId    Int

  user      User        @relation(fields: [userId], references: [userId])
  userId    String

  role      MProofRole  @relation(fields: [roleId], references: [roleId])
  roleId    Int         @default(0)

  status    Int         @default(0)

  skillUsedTime Int     @default(0)
  penalty   String      @default("")

  sort      Int         @default(0)    

  joinedAt  DateTime @default(now())
  @@unique([roomId, userId])
}

model ProofRoomSession {
  id         Int        @id @default(autoincrement())
  roomId     Int        @unique
  turn       Int        @default(0)
  focusOn    Int        @default(0)


  setting    String     @db.LongText

  status     Int        @default(0)

  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  room            ProofRoom       @relation(fields: [roomId], references: [id])
}

model ProofList {
  id            Int        @id @default(autoincrement())
  roomSessionId Int        
  code          String     @unique
  rank          String     @default("")
  status        String     @default("1") 
  title         String     @default("") 
  description   String     @default("") 
  revealedBy    String     @default("") 
  revealedTurn  Int        @default(0)
  bomFlg        Boolean    @default(false)
  references    String     @default("") 
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model MProofRole {
  roleId      Int           @id
  roleName    String
  priority    Int           @default(0)
  description String
  imageUrl    String
  notionUrl   String        @default("")
  group       Int           @default(0)

  members     ProofRoomMember[]
}