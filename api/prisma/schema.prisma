datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
  
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}


model User {
  userId        String        @id
  displayName   String
  invalidateFlg Boolean       @default(false)
  createdAt     DateTime      @default(now())

  roomMembers   RoomMember[]
}

model Room {
  id           Int           @id @default(autoincrement())
  roomCode     String        @unique
  status       Int           @default(0)
  openFlg      Boolean       @default(true)
  createdAt    DateTime      @default(now())

  members      RoomMember[]
  sessions     RoomSession[]
}

model RoomMember {
  id        Int      @id @default(autoincrement())
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    Int

  user      User     @relation(fields: [userId], references: [userId])
  userId    String

  role      MRole    @relation(fields: [roleId], references: [roleId])
  roleId    Int      @default(0)

  joinedAt  DateTime @default(now())
  commands  Command[]
  @@unique([roomId, userId])
}

enum Direction {
  N
  E
  S
  W
}

model RoomSession {
  id         Int        @id @default(autoincrement())
  roomId     Int        @unique
  turn       Int        @default(1)

  posX       Int
  posY       Int
  direction  Direction  // 今向いている方向（N/E/S/W）

  setting    String     @default("")

  status     Int        @default(0)

  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  room            Room       @relation(fields: [roomId], references: [id])
  commands        Command[]
}

enum CommandType {
  FORWARD
  TURN_RIGHT
}

model Command {
  id             Int          @id @default(autoincrement())
  roomSessionId  Int
  memberId       Int

  commandType    CommandType
  processed      Boolean      @default(false)
  createdAt      DateTime     @default(now())
  processedAt    DateTime?

  roomSession    RoomSession  @relation(fields: [roomSessionId], references: [id])
  member         RoomMember   @relation(fields: [memberId], references: [id])
}

model CommandHistory {
  id             Int          @id @default(autoincrement())
  roomSessionId  Int
  memberId       Int
  commandId      Int

  turn           Int
  processed      Boolean      @default(false)
  createdAt      DateTime     @default(now())
}

model InvalidatedLineUserForm {
  id          String   @id @default(cuid())
  formId      String   @unique
  createdAt   DateTime @default(now())
}

model MRole {
  roleId      Int           @id
  roleName    String
  priority    Int           @default(0)
  description String
  imageUrl    String
  notionUrl   String        @default("")

  members     RoomMember[]
}

